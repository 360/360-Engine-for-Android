<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/screen_border"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <TextView 
	    	android:id="@+id/data_settings_title" 
			android:text="@string/dataSettings_title" 
			style="@style/ScreenTitle" />
		<TextView 
			android:text="@string/dataSettings_data_connection" 
			style="@style/GeneralTitle"/>
		<RadioGroup
			android:id="@+id/radio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<RadioButton
				android:id="@+id/radio_option_roaming"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dataSettings_option_roaming"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp" />
			<RadioButton
				android:id="@+id/radio_option_off"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dataSettings_option_off"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp" />
		</RadioGroup>
		<TextView  
	    	android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" />  
		<TextView 
			android:text="@string/dataSettings_global_roaming" 
			style="@style/GeneralTitle" />
		<TextView  
			android:id="@+id/data_settings_roaming_state" 
	    	android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
	    	android:text="@string/dataSettings_roaming_state_on"
		    android:paddingTop="4dip" 
		    android:paddingBottom="4dip" />	
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button_change_roamin_settings" 
			android:text="@string/dataSettings_button_change_romaming_settings" 
			android:layout_gravity="center_horizontal" 
			android:paddingLeft="8dip" 
			android:paddingRight="8dip" />
	</LinearLayout>
</ScrollView>